{
    "update_url": "https://clients2.google.com/service/update2/crx",

    "name": "EasyVoice Search",
    "short_name": "EasyVoiceSearch",
    "version": "4.0.1",
    "manifest_version": 2,

    "options_page": "options.html",

    "description": "Voice search using any search engine easily!",

    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },

    "browser_action": {
        "default_title": "EasyVoice Search",
        "default_icon": "img/128.png"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "permissions": [
        "notifications"
    ],

    "commands": {
        "same-window": {
            "description": "Open in same window",
            "suggested_key": {
                "default": "Shift+Ctrl+M"
            }
        },
        "_execute_browser_action": {
            "description": "Voice Search",
            "suggested_key": {
                "default": "Ctrl + M"
            }
        }
    }
}
